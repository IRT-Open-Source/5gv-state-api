{
  "name": "state-api",
  "version": "0.0.1",
  "description": "Part of the 5G-VICTORI media cache prefilling solution. Service which exposes an API to persist and query system state information.",
  "author": "Christoph Ziegler",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "5gv-dto": "git+ssh://git@gitlab.irt.de/5g-victori/dto.git",
    "@nestjs/common": "^7.5.2",
    "@nestjs/core": "^7.5.2",
    "@nestjs/mongoose": "^7.0.2",
    "@nestjs/platform-express": "^7.5.2",
    "@nestjs/platform-socket.io": "^7.5.2",
    "@nestjs/websockets": "^7.5.2",
    "bluebird": "^3.7.2",
    "md5": "^2.3.0",
    "mongoose": "^5.10.14",
    "mongoose-paginate-v2": "^1.3.11",
    "node-nats-streaming": "^0.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.2",
    "@nestjs/schematics": "^7.2.1",
    "@nestjs/testing": "^7.5.2",
    "@types/bluebird": "^3.5.33",
    "@types/express": "^4.17.9",
    "@types/jest": "^25.2.3",
    "@types/mongoose": "^5.10.0",
    "@types/node": "^14.14.7",
    "@types/socket.io": "^2.1.11",
    "@types/supertest": "^2.0.10",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
